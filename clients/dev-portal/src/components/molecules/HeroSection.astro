---
interface Props {
  title: string;
  subtitle: string;
  ctaText: string;
  ctaLink: string;
}

const { title, subtitle, ctaText, ctaLink } = Astro.props;
---

<section class="bg-primary-700 text-white">
  <div class="max-w-7xl mx-auto px-4 sm:px-6 lg:px-8 py-16 md:py-24">
    <div class="md:flex md:items-center md:justify-between">
      <div class="md:w-1/2 mb-8 md:mb-0">
        <h1 class="text-4xl md:text-5xl font-bold tracking-tight mb-4">
          {title}
        </h1>
        <p class="text-lg md:text-xl text-primary-100 mb-8 max-w-2xl">
          {subtitle}
        </p>
        <div>
          <a
            href={ctaLink}
            class="inline-flex items-center px-6 py-3 border border-transparent text-base font-medium rounded-md shadow-sm text-primary-700 bg-white hover:bg-primary-50 focus:outline-none focus:ring-2 focus:ring-offset-2 focus:ring-primary-500 transition-colors duration-200"
          >
            {ctaText}
            <svg
              xmlns="http://www.w3.org/2000/svg"
              class="h-5 w-5 ml-2"
              viewBox="0 0 20 20"
              fill="currentColor"
            >
              <path
                fill-rule="evenodd"
                d="M10.293 5.293a1 1 0 011.414 0l4 4a1 1 0 010 1.414l-4 4a1 1 0 01-1.414-1.414L12.586 11H5a1 1 0 110-2h7.586l-2.293-2.293a1 1 0 010-1.414z"
                clip-rule="evenodd"
              />
            </svg>
          </a>
        </div>
      </div>
      <div class="md:w-1/2 flex justify-center">
        <div class="w-full max-w-md bg-white rounded-lg shadow-xl overflow-hidden">
          <div class="p-5 bg-primary-600">
            <div class="flex items-center space-x-2">
              <div class="w-3 h-3 bg-red-500 rounded-full"></div>
              <div class="w-3 h-3 bg-yellow-500 rounded-full"></div>
              <div class="w-3 h-3 bg-green-500 rounded-full"></div>
            </div>
          </div>
          <div class="p-6 bg-gray-900 text-gray-300 font-mono text-sm">
            <div class="flex items-center mb-4">
              <span class="text-green-400">$</span>
              <span class="ml-2">npm install @marriott/dev-tools</span>
            </div>
            <div class="flex items-center">
              <span class="text-green-400">$</span>
              <span class="ml-2">npx marriott-dev init</span>
            </div>
          </div>
        </div>
      </div>
    </div>
  </div>
</section>
